    <Style TargetType="NavigationPage">
        <Setter Property="BarBackgroundColor" Value="{StaticResource BackgroundThemeColor}" />
        <Setter Property="BarTextColor" Value="{StaticResource TextThemeColor}" />
    </Style>
    <Style TargetType="menu:IconView">
        <Setter Property="ThemeName" Value="Light" />
    </Style>

    <Style x:Key="LabelDefault" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource LabelDefaultColor}"/>
        <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}"/>
    </Style>

    <Style x:Key="LabelDefaultBold" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource LabelDefaultColor}"/>
        <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}"/>        
    </Style>

    <Style x:Key="LabelDashboardHeader" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource LabelDefaultColor}"/>
        <Setter Property="FontSize" Value="{StaticResource MediumFontSize}"/>
    </Style>

    <Style x:Key="LabelActionDefault" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource ActionDefaultColor}"/>
        <Setter Property="FontSize" Value="{StaticResource MediumFontSize}"/>
    </Style>

    <Style x:Key="LabelFooterIcon" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource LabelFooterDefaultColor}"/>
        <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}"/>
        <Setter Property="HorizontalTextAlignment" Value="Center"/>
        <Setter Property="VerticalTextAlignment" Value="Center"/>
    </Style>

    <Style x:Key="FrameStyle" TargetType="Frame">
        <Setter Property="BorderColor" Value="{StaticResource FrameBorderColor}" />
        <Setter Property="CornerRadius" Value="{StaticResource FrameCornerRadius}" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="Padding" Value="10" />
    </Style>

    <Style x:Key="ImageDefault" TargetType="Image">
        <Setter Property="WidthRequest" Value="30"/>
        <Setter Property="HeightRequest" Value="30"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
    </Style>

    <Style x:Key="ImageFooterDefault" TargetType="Image">
        <Setter Property="WidthRequest" Value="30"/>
        <Setter Property="HeightRequest" Value="30"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
    </Style>

    <Style x:Key="GridFooterDefault" TargetType="Grid">
        <Setter Property="BackgroundColor" Value="{StaticResource FooterBackgroundColor}"/>
        <Setter Property="VerticalOptions" Value="End"/>
        <Setter Property="Padding" Value="5"/>
    </Style>

    <Style x:Key="BoxViewFooterDefault" TargetType="BoxView">
        <Setter Property="BackgroundColor" Value="{StaticResource BoxViewFooterBackgroundColor}"/>
        <Setter Property="HeightRequest" Value="{StaticResource BoxLineDefaultHeight}"/>
    </Style>
    <Style x:Key="EntryStyle" TargetType="Entry">
        <Setter Property="TextColor" Value="{StaticResource EntryDefaultTextColor}"/>
        <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}"/>
        <Setter Property="HorizontalOptions" Value="Fill" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="Margin">
            <Setter.Value>
                <OnPlatform Android="0" iOS="10" />
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="ImageStyle" TargetType="Image">
        <Setter Property="HeightRequest">
            <Setter.Value>
                <OnIdiom Phone="30" Tablet="35" />
            </Setter.Value>
        </Setter>
        <Setter Property="WidthRequest">
            <Setter.Value>
                <OnIdiom Phone="30" Tablet="35" />
            </Setter.Value>
        </Setter>
        <Setter Property="Aspect" Value="AspectFit" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>
    <Style x:Key="ButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="#fff17b" />
        <Setter Property="CornerRadius" Value="2" />
        <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}" />
        <Setter Property="TextColor" Value="{StaticResource LabelDefaultColor}" />
        <Setter Property="HeightRequest" Value="40" />
    </Style>
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="#fff17b"/>
        <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}"/>
        <Setter Property="TextColor" Value="#000"/>
        <Setter Property="HeightRequest" Value="40"/>
    </Style>
    
