                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Text="Title"/>
                <Label Grid.Column="1" Text="Count" />
                <Label Grid.Column="2" Text="Merch."/>
                <Label Grid.Column="3" Text="Labor" />
                <Label Grid.Column="4" Text="Gross" />
                <Label Grid.Column="5" Text="Avg. Tran" />
            </Grid>
