        <dxn:TabViewItem  HeaderFontSize="14"
                     HeaderFontAttributes="Bold"
                     HeaderTextColor="#99191919"
                     HeaderIconColor="#99191919"
                     HeaderIconPosition="Top"
                     HeaderIconSpacing="4"
                     HeaderWidth="*"
                     HeaderMinWidth="90"
                     HeaderMaxWidth="360"
                     HeaderPadding="16,0,16,0"
                     HeaderVisibleElements="TextAndIcon"
                     SelectedHeaderTextColor="#1e88e5"
                     SelectedHeaderIconColor="#1e88e5"
                          HeaderText="Info">
            <dxn:TabViewItem.Content>
                <Grid RowSpacing="0" HorizontalOptions="FillAndExpand" VerticalOptions="Start">


                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="35*" />
                        <ColumnDefinition Width="65*" />
                    </Grid.ColumnDefinitions>
                    <Label Text="{Binding Items}"/>
                    <Label Grid.Row="1" Grid.Column="0" Text="Type:  " FontAttributes="Bold"  TextColor="Black" XAlign="End"   />
                    <Label Grid.Row="1" Grid.Column="1" Text="{Binding ItemType}" TextColor="Black" />

                    <Label Grid.Row="2" Grid.Column="0" Text="Description:  " FontAttributes="Bold"  TextColor="Black" XAlign="End"   />
                    <Label Grid.Row="2" Grid.Column="1" Text="{Binding WOItemDscr}" TextColor="Black" />

                    <Label Grid.Row="3" Grid.Column="0" Text="Equip ID:  " FontAttributes="Bold"  TextColor="Black" XAlign="End"   />
                    <Label Grid.Row="3" Grid.Column="1" Text="{Binding WOEquipID}" TextColor="Black" />

                    <Label Grid.Row="4" Grid.Column="0" Text="Serial Number:  " FontAttributes="Bold"  TextColor="Black" XAlign="End"   />
                    <Label Grid.Row="4" Grid.Column="1" Text="{Binding WOSerial}" TextColor="Black" />

                    <Label Grid.Row="5" Grid.Column="0" Text="Make:  " FontAttributes="Bold"  TextColor="Black" XAlign="End"   />
                    <Label Grid.Row="5" Grid.Column="1" Text="{Binding WOMake}" TextColor="Black" />

                    <Label Grid.Row="6" Grid.Column="0" Text="Model:  " FontAttributes="Bold"  TextColor="Black" XAlign="End"   />
                    <Label Grid.Row="6" Grid.Column="1" Text="{Binding WOModel}" TextColor="Black" />

                    <Label Grid.Row="7" Grid.Column="0" Text="Meter:  " FontAttributes="Bold"  TextColor="Black" XAlign="End"   />
                    <Label Grid.Row="7" Grid.Column="1" Text="{Binding WOMeter}" TextColor="Black" />

                    <Label Grid.Row="8" Grid.Column="0" Text="Year:  " FontAttributes="Bold"  TextColor="Black" XAlign="End"   />
                    <Label Grid.Row="8" Grid.Column="1" Text="{Binding WOYear}" TextColor="Black" />

                    <Label Grid.Row="9" Grid.Column="0" Text="Color:  " FontAttributes="Bold"  TextColor="Black" XAlign="End"   />
                    <Label Grid.Row="9" Grid.Column="1" Text="{Binding WOColor}" TextColor="Black" />
                </Grid>
            </dxn:TabViewItem.Content>
    </dxn:TabViewItem>

    </dxn:TabView>
