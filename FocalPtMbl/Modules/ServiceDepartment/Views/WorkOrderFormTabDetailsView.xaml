        <dxn:TabViewItem HeaderFontSize="14"
                     HeaderFontAttributes="Bold"
                     HeaderTextColor="#99191919"
                     HeaderIconColor="#99191919"
                     HeaderIconPosition="Top"
                     HeaderIconSpacing="4"
                     HeaderWidth="*"
                         HeaderMinWidth="100" 
                         HeaderMaxWidth="360" 
                     HeaderPadding="16,0,16,0"
                     HeaderVisibleElements="TextAndIcon"
                     SelectedHeaderTextColor="#1e88e5"
                     SelectedHeaderIconColor="#1e88e5"
                         HeaderText="Totals">
            <dxn:TabViewItem.Content BackgroundColor="{DynamicResource MainPageBackgroundColor}">
                <ScrollView BackgroundColor="{DynamicResource BackgroundThemeColor}" Margin="5,5">
                    <StackLayout Margin="5,5">
                        <Grid>
                            <Label Text="Totals" Grid.Row="0" Style="{StaticResource Key=LabelDashboardHeader}" XAlign="Start" YAlign="Center" />
                            <controls:LabelTextCustomControl Grid.Row="1" Title="Work Order Total:" Value="{Binding WOTAmt, StringFormat='{0:C}'}" />
                            <controls:LabelTextCustomControl Grid.Row="2" Title="Customer Total:" Value="{Binding WOCAmt, StringFormat='{0:C}'}" />
                            <controls:LabelTextCustomControl Grid.Row="3" Title="Warranty Total:" Value="{Binding WOWAmt, StringFormat='{0:C}'}" />
                            <controls:LabelTextCustomControl Grid.Row="4" Title="Tax Total:" Value="{Binding WOTax, StringFormat='{0:C}'}" />
                            <controls:LabelTextCustomControl Grid.Row="5" Title="Amount Paid:" Value="{Binding WOPaid, StringFormat='{0:C}'}" />
                            <controls:LabelTextCustomControl Grid.Row="6" Title="Balance Due:" Value="{Binding CustomerARBal, StringFormat='{0:C}'}" />

                            <Label Text="Customer" Grid.Row="7" Style="{StaticResource Key=LabelDashboardHeader}" XAlign="Start" YAlign="Center" />
                            <controls:LabelTextCustomControl Grid.Row="8" Title="Parts:" Value="{Binding TotalPartsCustAmt, StringFormat='{0:C}'}" />
                            <controls:LabelTextCustomControl Grid.Row="9" Title="Labor:" Value="{Binding TotalLaborCustAmt, StringFormat='{0:C}'}" />
                            <controls:LabelTextCustomControl Grid.Row="10" Title="Warranty Parts:" Value="{Binding TotalWarPartsCustAmt, StringFormat='{0:C}'}" />
                            <controls:LabelTextCustomControl Grid.Row="11" Title="Warranty Labor:" Value="{Binding TotalWarLaborCustAmt, StringFormat='{0:C}'}" />
                            <controls:LabelTextCustomControl Grid.Row="12" Title="Tax:" Value="{Binding TotalTaxCustAmt, StringFormat='{0:C}'}" />

                            <Label Text="Internal" Grid.Row="13" Style="{StaticResource Key=LabelDashboardHeader}" XAlign="Start" YAlign="Center" />
                            <controls:LabelTextCustomControl Grid.Row="14" Title="Parts:" Value="{Binding TotalPartsIntAmt, StringFormat='{0:C}'}" />
                            <controls:LabelTextCustomControl Grid.Row="15" Title="Labor:" Value="{Binding TotalLaborIntAmt, StringFormat='{0:C}'}" />
                            <controls:LabelTextCustomControl Grid.Row="16" Title="Warranty Parts:" Value="{Binding TotalWarPartsIntAmt, StringFormat='{0:C}'}" />
                            <controls:LabelTextCustomControl Grid.Row="17" Title="Warranty Labor:" Value="{Binding TotalWarLaborIntAmt, StringFormat='{0:C}'}" />
                            <controls:LabelTextCustomControl Grid.Row="18" Title="Tax:" Value="{Binding TotalTaxIntAmt, StringFormat='{0:C}'}" />
                        </Grid>
                    </StackLayout>
                </ScrollView>
            </dxn:TabViewItem.Content>
    </dxn:TabViewItem>

        <dxn:TabViewItem HeaderFontSize="14"
                     HeaderFontAttributes="Bold"
                     HeaderTextColor="#99191919"
                     HeaderIconColor="#99191919"
                     HeaderIconPosition="Top"
                     HeaderIconSpacing="4"
                     HeaderWidth="*"
                         HeaderMinWidth="100" 
                         HeaderMaxWidth="360" 
                     HeaderPadding="16,0,16,0"
                     HeaderVisibleElements="TextAndIcon"
                     SelectedHeaderTextColor="#1e88e5"
                     SelectedHeaderIconColor="#1e88e5"
                         HeaderText="Payments">
            <dxn:TabViewItem.Content BackgroundColor="{DynamicResource MainPageBackgroundColor}">
                <ScrollView BackgroundColor="{DynamicResource BackgroundThemeColor}" Margin="5,5">
                    <StackLayout Margin="5,5">
                        <dxcv:DXCollectionView x:Name="collectionView"
                           ItemsSource="{Binding Payments}"
                           IndicatorColor="Lime">
                    <!--Define the item template.-->

                    <dxcv:DXCollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="5, 0, 0, 0" Margin="0,5" BackgroundColor="{DynamicResource ControlBackgroundColor}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="5" />
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" Grid.Column="0"  Text="Type: "
                           Margin="0,2"
                                       FontAttributes="Bold" 
                           TextColor="Black"/>
                                <Label Grid.Row="0" Grid.Column="1"  Text="{Binding PayID}"
                           Margin="0,2"
                           TextColor="#3A3A3A"/>
                                <Label Grid.Row="1" Grid.Column="0"  Text="Amount: "
                           Margin="0,2"
                                       FontAttributes="Bold" 
                           TextColor="Black"/>
                                <Label Grid.Row="1" Grid.Column="1"  Text="{Binding PaymentAmt, StringFormat='{0:C}'}"
                               TextColor="#3A3A3A" />
                                <Label Grid.Row="1" Grid.Column="2"  Text="Refunded: "
                                       FontAttributes="Bold" 
                           Margin="0,2"
                           TextColor="Black"/>
                                <Label Grid.Row="1" Grid.Column="3"  Text="{Binding WODtlPart, StringFormat='{0:C}'}"
                               TextColor="#3A3A3A" />
                                <Label Grid.Row="2" Grid.Column="0"  Text="Cashback: "
                                       FontAttributes="Bold" 
                           Margin="0,2"
                           TextColor="Black"/>
                                <Label Grid.Row="2" Grid.Column="1" Text="{Binding WODtlQty}"
                               Margin="0,2"
                               TextColor="#3A3A3A" />
                                <Label Grid.Row="2" Grid.Column="2"  Text="Date: "
                                       FontAttributes="Bold" 
                           Margin="0,2"
                           TextColor="Black"/>
                                        <Label Grid.Row="2" Grid.Column="3" Text="{Binding PaymentPDte,StringFormat='{0:MM/dd/yyyy hh:mm tt}'}"
                               Margin="0,2"
                               TextColor="#3A3A3A" />
                                <Label Grid.Row="0" Grid.Column="2"  Text="Trans: "
                                       FontAttributes="Bold" 
                           Margin="0,2"
                           TextColor="Black"/>
                                <Label Grid.Row="0" Grid.Column="3" Text="{Binding WODtlStatusText}"
                               Margin="0,2"
                               TextColor="#3A3A3A" />
                                <BoxView Margin="0,0,0,0" Grid.Row="4" Grid.ColumnSpan="4" BackgroundColor="{DynamicResource MainPageBackgroundColor}"
                         HeightRequest="5"/>
                            </Grid>
                        </DataTemplate>
                    </dxcv:DXCollectionView.ItemTemplate>
                </dxcv:DXCollectionView>
                    </StackLayout>
                </ScrollView>
            </dxn:TabViewItem.Content>
    </dxn:TabViewItem>

        <dxn:TabViewItem HeaderFontSize="14"
                     HeaderFontAttributes="Bold"
                     HeaderTextColor="#99191919"
                     HeaderIconColor="#99191919"
                     HeaderIconPosition="Top"
                     HeaderIconSpacing="4"
                     HeaderWidth="*"
                         HeaderMinWidth="100" 
                         HeaderMaxWidth="360" 
                     HeaderPadding="16,0,16,0"
                     HeaderVisibleElements="TextAndIcon"
                     SelectedHeaderTextColor="#1e88e5"
                     SelectedHeaderIconColor="#1e88e5"
                         HeaderText="Details">
            <dxn:TabViewItem.Content BackgroundColor="{DynamicResource MainPageBackgroundColor}">
                <ScrollView BackgroundColor="{DynamicResource BackgroundThemeColor}" Margin="5,5">
                    <StackLayout Margin="5,5">
                        <dxcv:DXCollectionView x:Name="collectionView2"
                           ItemsSource="{Binding Details}"
                           IndicatorColor="Lime">
                    <!--Define the item template.-->

                    <dxcv:DXCollectionView.ItemTemplate>
                        <DataTemplate>
                                    <Grid Padding="5, 0, 0, 0" Margin="0,5" BackgroundColor="{DynamicResource ControlBackgroundColor}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="22"/>
                                    <RowDefinition Height="22"/>
                                    <RowDefinition Height="22"/>
                                    <RowDefinition Height="5" />
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" Grid.Column="0"  Text="Description: "
                                       FontAttributes="Bold" 
                           Margin="0,2"
                           TextColor="#3A3A3A"/>
                                <Label Grid.Row="0" Grid.Column="1"  Text="{Binding WODtlDscr}"
                           Margin="0,2"
                           TextColor="#3A3A3A"/>
                                <Label Grid.Row="1" Grid.Column="0"  Text="Mfg/Tech: "
                                       FontAttributes="Bold" 
                           Margin="0,2"
                           TextColor="#3A3A3A"/>
                                <Label Grid.Row="1" Grid.Column="1"  Text="{Binding WODtlMfg}"
                               TextColor="#3A3A3A" />
                                <Label Grid.Row="1" Grid.Column="2"  Text="Part: "
                                       FontAttributes="Bold" 
                           Margin="0,2"
                           TextColor="#3A3A3A"/>
                                <Label Grid.Row="1" Grid.Column="3"  Text="{Binding WODtlPart}"
                               TextColor="#3A3A3A" />
                                <Label Grid.Row="2" Grid.Column="0"  Text="Quantity: "
                                       FontAttributes="Bold" 
                           Margin="0,2"
                           TextColor="#3A3A3A"/>
                                <Label Grid.Row="2" Grid.Column="1" Text="{Binding WODtlQty}"
                               Margin="0,2"
                               TextColor="#3A3A3A" />
                                <Label Grid.Row="2" Grid.Column="2"  Text="Price: "
                                       FontAttributes="Bold" 
                           Margin="0,2"
                           TextColor="#3A3A3A"/>
                                <Label Grid.Row="2" Grid.Column="3" Text="{Binding WODtlPrice, StringFormat='{0:C}'}"
                               Margin="0,2"
                               TextColor="#3A3A3A" />
                                <Label Grid.Row="0" Grid.Column="2"  Text="Item Type: "
                                       FontAttributes="Bold" 
                           Margin="0,2"
                           TextColor="#3A3A3A"/>
                                <Label Grid.Row="0" Grid.Column="3" Text="{Binding WODtlStatusText}"
                               Margin="0,2"
                               TextColor="#3A3A3A" />
                                <BoxView Margin="0,0,0,0" Grid.Row="4" Grid.ColumnSpan="4" BackgroundColor="{DynamicResource MainPageBackgroundColor}"
                         HeightRequest="5"/>
                            </Grid>
                        </DataTemplate>
                    </dxcv:DXCollectionView.ItemTemplate>
                </dxcv:DXCollectionView>
                    </StackLayout>
                </ScrollView>
            </dxn:TabViewItem.Content>
    </dxn:TabViewItem>

        <dxn:TabViewItem  HeaderFontSize="14"
                     HeaderFontAttributes="Bold"
                     HeaderTextColor="#99191919"
                     HeaderIconColor="#99191919"
                     HeaderIconPosition="Top"
                     HeaderIconSpacing="4"
                     HeaderWidth="*"
                         HeaderMinWidth="100" 
