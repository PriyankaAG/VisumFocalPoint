        <dxn:TabViewItem HeaderFontSize="14"
                     HeaderFontAttributes="Bold"
                     HeaderTextColor="#99191919"
                     HeaderIconColor="#99191919"
                     HeaderIconPosition="Top"
                     HeaderIconSpacing="4"
                     HeaderWidth="*"
                     HeaderMinWidth="90"
                     HeaderMaxWidth="360"
                     HeaderPadding="16,0,16,0"
                     HeaderVisibleElements="TextAndIcon"
                     SelectedHeaderTextColor="#1e88e5"
                     SelectedHeaderIconColor="#1e88e5"
                         HeaderText="Payments">
            <dxn:TabViewItem.Content>
                <dxcv:DXCollectionView x:Name="collectionView"
                           ItemsSource="{Binding Payments}"
                           IndicatorColor="Lime">
                    <!--Define the item template.-->

                    <dxcv:DXCollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="0, 0, 0, 0" BackgroundColor="{DynamicResource BackgroundThemeColor}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="22"/>
                                    <RowDefinition Height="22"/>
                                    <RowDefinition Height="22"/>
                                    <RowDefinition Height="5" />
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" Grid.Column="0"  Text="Type: "
                           Margin="0,2"
                                       FontAttributes="Bold" 
                           TextColor="Black"/>
                                <Label Grid.Row="0" Grid.Column="1"  Text="{Binding PayID}"
                           Margin="0,2"
                           TextColor="#3A3A3A"/>
                                <Label Grid.Row="1" Grid.Column="0"  Text="Amount: "
                           Margin="0,2"
                                       FontAttributes="Bold" 
                           TextColor="Black"/>
                                <Label Grid.Row="1" Grid.Column="1"  Text="{Binding PaymentAmt, StringFormat='{0:C}'}"
                               TextColor="#3A3A3A" />
                                <Label Grid.Row="1" Grid.Column="2"  Text="Refunded: "
                                       FontAttributes="Bold" 
                           Margin="0,2"
                           TextColor="Black"/>
                                <Label Grid.Row="1" Grid.Column="3"  Text="{Binding WODtlPart, StringFormat='{0:C}'}"
                               TextColor="#3A3A3A" />
                                <Label Grid.Row="2" Grid.Column="0"  Text="Cashback: "
                                       FontAttributes="Bold" 
                           Margin="0,2"
                           TextColor="Black"/>
                                <Label Grid.Row="2" Grid.Column="1" Text="{Binding WODtlQty}"
                               Margin="0,2"
                               TextColor="#3A3A3A" />
                                <Label Grid.Row="2" Grid.Column="2"  Text="Date: "
                                       FontAttributes="Bold" 
                           Margin="0,2"
                           TextColor="Black"/>
                                <Label Grid.Row="2" Grid.Column="3" Text="{Binding PaymentPDte, StringFormat='{0:C}'}"
                               Margin="0,2"
                               TextColor="#3A3A3A" />
                                <Label Grid.Row="0" Grid.Column="2"  Text="Trans: "
                                       FontAttributes="Bold" 
                           Margin="0,2"
                           TextColor="Black"/>
                                <Label Grid.Row="0" Grid.Column="3" Text="{Binding WODtlStatusText}"
                               Margin="0,2"
                               TextColor="#3A3A3A" />
                                <BoxView Margin="0,0,0,0" Grid.Row="4" Grid.ColumnSpan="4" BackgroundColor="{DynamicResource MainPageBackgroundColor}"
                         HeightRequest="5"/>


                            </Grid>
                        </DataTemplate>
                    </dxcv:DXCollectionView.ItemTemplate>

                    <!--Define the group header template.-->
                    <dxcv:DXCollectionView.GroupHeaderTemplate>
                        <DataTemplate>
                            <StackLayout Margin="2, 0, 18, 10">
                                <Label FontFamily="Roboto-Medium"
                       Margin="0,20,0,1"
                       TextColor="#55575c"
                       Text="{Binding Value}"/>
                                <BoxView BackgroundColor="#ebebeb" 
                         HeightRequest="1"/>
                            </StackLayout>
                        </DataTemplate>
                    </dxcv:DXCollectionView.GroupHeaderTemplate>

                    <!--Specify margins.-->
                    <dxcv:DXCollectionView.Margin>
                        <OnIdiom x:TypeArguments="Thickness" Phone="16,0,16,0" Tablet="71,0,0,0"/>
                    </dxcv:DXCollectionView.Margin>
                </dxcv:DXCollectionView>
            </dxn:TabViewItem.Content>
    </dxn:TabViewItem>

