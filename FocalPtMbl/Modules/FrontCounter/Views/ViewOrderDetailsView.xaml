                    <dxe:SimpleButton Clicked="SimpleButton_Clicked_1" Text="Test Email Copy to Customer"></dxe:SimpleButton>
                    <dxe:SimpleButton Clicked="SimpleButton_Clicked_2" Text="Test Capture Image"></dxe:SimpleButton>
                    <dxe:SimpleButton Clicked="SimpleButton_Clicked_3" Text="Attach Image"></dxe:SimpleButton>
                    <Image x:Name="imgSelected"/>
                </StackLayout>
            </ContentPage>
        </dxn:TabPageItem.Content>
    </dxn:TabPageItem>-->
</dxn:TabPage>