                <RowDefinition Height="40"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0"  Text="Amount Due "/>
            <Label Grid.Row="0" Grid.Column="1" Text="$0.00 "/>
            <Label Grid.Row="0" Grid.Column="2"  Text="Suggested Deposit "/>
            <Label Grid.Row="0" Grid.Column="3" Text="$0.00 "/>
            <dxe:SimpleButton Grid.Row="1" Grid.Column="0" TextColor="White" Padding="0" BackgroundColor="#2088ff" Text="New Payment" Clicked="SimpleButton_Clicked" />
            <dxe:SimpleButton Grid.Row="1" Grid.Column="1" TextColor="White" Padding="0" BackgroundColor="#2088ff" Text="Deposit" Clicked="SimpleButton_Clicked"/>
            <dxe:SimpleButton Grid.Row="1" Grid.Column="2" TextColor="White" Padding="0" BackgroundColor="#2088ff" Text="Security Deposit" Clicked="SimpleButton_Clicked" />
            <dxe:SimpleButton Grid.Row="1" Grid.Column="3" TextColor="White" Padding="0" BackgroundColor="#2088ff" Text="Secuirty Pre-Auth" Clicked="SimpleButton_Clicked"  />
            <BoxView Margin="0,0,0,0" Grid.Row="2" Grid.ColumnSpan="4" BackgroundColor="{DynamicResource MainPageBackgroundColor}" HeightRequest="5"/>
