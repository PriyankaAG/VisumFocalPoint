                                                            <Span Text="{Binding OrderODte, StringFormat='{0:MM/dd/yyyy hh:mm tt}', TargetNullValue={StaticResource UnknownValue}}" />
                                                        </FormattedString.Spans>
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>
                                            <Label Grid.Row="1" Grid.Column="1" LineBreakMode="WordWrap" MaxLines="2" TextColor="#3A3A3A">
                                                <Label.FormattedText>
                                                    <FormattedString>
                                                        <FormattedString.Spans>
                                                            <Span Text="Due: " FontAttributes="Bold" />
                                                            <Span Text="{Binding OrderDDte, StringFormat='{0:MM/dd/yyyy hh:mm tt}', TargetNullValue={StaticResource UnknownValue}}" />
                                                        </FormattedString.Spans>
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>
                                            <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" TextColor="#3A3A3A">
                                                <Label.FormattedText>
                                                    <FormattedString>
                                                        <FormattedString.Spans>
                                                            <Span Text="Amount: " FontAttributes="Bold" />
                                                            <Span Text="{Binding OrderAmount, StringFormat='{0:C}', TargetNullValue={StaticResource UnknownValue}}" />
                                                        </FormattedString.Spans>
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </dxcv:DXCollectionView.ItemTemplate>
                        </dxcv:DXCollectionView>
                    </StackLayout>
                    <ActivityIndicator x:Name="activityIndicatorReservation" IsRunning="{Binding Indicator}" IsVisible="{Binding Indicator}" Color="Blue"  
                       BackgroundColor="Transparent" VerticalOptions="Center" HorizontalOptions="Center" />
                </Grid>
            </ContentPage>
        </dxn:TabPageItem.Content>
    </dxn:TabPageItem>

    <dxn:TabPageItem >
        <dxn:TabPageItem.Content>
            <ContentPage Title="Quotes" Icon="Order_Quote.png">
                <Grid BackgroundColor="{DynamicResource BackgroundThemeColor}" Margin="5,5">
                    <StackLayout Margin="5,5">
                        <Label Text="Search Quotes" FontSize="Default" Style="{DynamicResource LabelDashboardHeader}" />
                        <dxe:TextEdit x:Name="searchquotesText" 
                                      PlaceholderText="Enter Order Number" 
                                      Text="{Binding QuotesToSearch}"
                                      HeightRequest="40" 
                                      Style="{StaticResource Key=DxeTextEdit}">
                            <dxe:TextEdit.Behaviors>
                                <xct:EventToCommandBehavior
                                    EventName="Unfocused"
                                    Command="{Binding SearchCommand}"
                                    CommandParameter="3"/>
                                <xct:EventToCommandBehavior
                                    Command="{Binding ClearCommand}"
                                    CommandParameter="3"
                                    EventName="ClearIconClicked" />
                            </dxe:TextEdit.Behaviors>
                        </dxe:TextEdit>


                        <dxcv:DXCollectionView x:Name="collectionView3"
                           ItemsSource="{Binding OpenQuote}" SelectionMode="Single" IndicatorColor="Lime" Tap="ItemSelected">
                            <!--Define the item template.-->

                            <dxcv:DXCollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame BackgroundColor="{StaticResource BackgroundPageColor}" CornerRadius="5" HasShadow="True" Padding="5, 5, 5, 5" Margin="0,5">
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup Name="CommonStates">
                                                <VisualState Name="Selected">
                                                    <VisualState.Setters>
