<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FocalPoint.Modules.FrontCounter.Views.Rentals.OpenRentalsView"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             xmlns:dxe="http://schemas.devexpress.com/xamarin/2014/forms/editors"
             xmlns:dxdf="http://schemas.devexpress.com/xamarin/2014/forms/dataform"
             xmlns:dxcv="http://schemas.devexpress.com/xamarin/2014/forms/collectionview"
             xmlns:viewModel="clr-namespace:FocalPoint.Modules.FrontCounter.ViewModels.Rentals"
             BackgroundColor="{DynamicResource MainPageBackgroundColor}"
             ios:Page.UseSafeArea="True">
    <ContentPage.BindingContext>
        <viewModel:OpenRentalsViewModel/>
    </ContentPage.BindingContext>
    <StackLayout>
        <dxe:TextEdit LabelText="Search" PlaceholderText="Rental Item Search" ClearIconClicked="TextEdit_ClearIconClicked" Completed="TextEdit_Completed" Text="" Margin="10,0"></dxe:TextEdit>
        <dxcv:DXCollectionView x:Name="collectionView"
                           ItemsSource="{Binding Recent}"
                           SelectedItem="{Binding SelectedRentalItem}"
                           IndicatorColor="Lime"
                           Tap="ItemSelected"
                               SelectionChanged="collectionView_SelectionChanged"
            LoadMoreCommand="{Binding LoadMoreCommand}"
            IsLoadMoreEnabled="True"
                           IsRefreshing="{Binding IsRefreshing, Mode=TwoWay}">
            <!--Define the item template.-->

            <dxcv:DXCollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="0, 5, 0, 0" BackgroundColor="{DynamicResource BackgroundThemeColor}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="22"/>
                            <RowDefinition Height="22"/>
                            <RowDefinition Height="22"/>
                        </Grid.RowDefinitions>
                        <!--<StackLayout Grid.Column="0" 
                             Padding="18,1,18,7"
                             Orientation="Vertical">-->
                        <Label Grid.Row="0" Grid.Column="0"  Text="Description: " FontAttributes="Bold" Margin="10,0" TextColor="Black"/>
                        <Label Grid.Row="1" Grid.Column="0"  Text="Equip ID:" FontAttributes="Bold" Margin="10,0" TextColor="Black"/>
                        <Label Grid.Row="2" Grid.Column="0"  Text="Store:" FontAttributes="Bold" Margin="10,0" TextColor="Black"/>
                        
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding RentalDscr}" TextColor="Black"/>
                        <Label Grid.Row="1" Grid.Column="1"  Text="{Binding RentalEquipID}" TextColor="Black"/>
                        <Label Grid.Row="2" Grid.Column="1" Text="{Binding RentalBelongsTo}" TextColor="Black"/>
                        <BoxView Margin="0,0,0,0" Grid.Row="3" Grid.ColumnSpan="3" BackgroundColor="{DynamicResource MainPageBackgroundColor}"
                         HeightRequest="5"/>
                        <!--<BoxView WidthRequest=".5" BackgroundColor="Black" Grid.Row="4" Grid.ColumnSpan="3"/>-->
                        <!--<Label Grid.Row="1" Grid.Column="3"  Text="{Binding State}"
                               Margin="0,2"
                               TextColor="#505050"/>
                        <Label Grid.Row="2" Grid.Column="3"  Text="{Binding Zip}"
                               Margin="0,2"
                               TextColor="#505050"/>-->
                        <!--</StackLayout>-->
                    </Grid>
                </DataTemplate>
            </dxcv:DXCollectionView.ItemTemplate>

            <!--Define the group header template.-->
            <!--<dxcv:DXCollectionView.GroupHeaderTemplate>
                <DataTemplate>
                    <StackLayout Margin="2, 0, 18, 10">
                        <Label FontFamily="Roboto-Medium"
                       Margin="0,20,0,1"
                       TextColor="#55575c"
                       Text="{Binding Value}"/>
                        <BoxView BackgroundColor="Black" 
                         HeightRequest="1"/>
                    </StackLayout>
                </DataTemplate>
            </dxcv:DXCollectionView.GroupHeaderTemplate>-->

            <!--Specify margins.-->
            <!--<dxcv:DXCollectionView.Margin>
                <OnIdiom x:TypeArguments="Thickness" Phone="16,0,16,0" Tablet="71,0,0,0"/>
            </dxcv:DXCollectionView.Margin>-->
        </dxcv:DXCollectionView>
        <!--asdfsdf-->
        <!--<dxcv:DXCollectionView x:Name="collectionView"
                           ItemsSource="{Binding Recent}"
                           SelectedItem="{Binding SelectedRentalItem}"
                           IndicatorColor="Lime"
                           Tap="collectionView_Tap"
                               SelectionChanged="collectionView_SelectionChanged"
            LoadMoreCommand="{Binding LoadMoreCommand}"
            IsLoadMoreEnabled="True"
                           IsRefreshing="{Binding IsRefreshing, Mode=TwoWay}">
            --><!--Define the item template.--><!--

            <dxcv:DXCollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10, 8, 18, 7">
