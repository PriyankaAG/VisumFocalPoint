                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="22"/>
                            <RowDefinition Height="22"/>
                            <RowDefinition Height="22"/>
                        </Grid.RowDefinitions>
                        --><!--<StackLayout Grid.Column="0" 
                             Padding="18,1,18,7"
                             Orientation="Vertical">--><!--
                        <Label Grid.Row="0" Grid.Column="0"  Text="Description: "
                           Margin="0,2"
                               FontSize="15"
                           TextColor="Black"/>
                        <Label Grid.Row="1" Grid.Column="0"  Text="Equip ID"
                               FontSize="12"
                               TextColor="Black"/>
                        <Label Grid.Row="2" Grid.Column="0"  Text="Store"
                               Margin="0,2"
                               FontSize="12"
                               TextColor="Black"/>
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding RentalDscr}"
                           Margin="0,2"
                               FontSize="15"
                           TextColor="Black"/>
                        <Label Grid.Row="1" Grid.Column="1"  Text="{Binding RentalEquipID}"
                               FontSize="12"
                               TextColor="Black"/>
