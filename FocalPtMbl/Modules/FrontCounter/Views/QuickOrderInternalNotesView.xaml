<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FocalPoint.Modules.FrontCounter.Views.QuickOrderInternalNotesView"
             xmlns:dxe="http://schemas.devexpress.com/xamarin/2014/forms/editors">
    <ContentPage.Content>
        <StackLayout>
            <Editor Placeholder="Enter Internal Notes Here" Text="{Binding Value}" AutoSize="TextChanges"/>
            <dxe:SimpleButton  TextColor="White" Padding="10" BackgroundColor="#2088ff" Text="Cancel" Clicked="SimpleButton_Clicked" />
            <dxe:SimpleButton   TextColor="White" Padding="10" BackgroundColor="#2088ff" Text="Save" Clicked="SimpleButton_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>