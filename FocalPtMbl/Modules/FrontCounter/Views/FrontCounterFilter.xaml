<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FocalPoint.Modules.FrontCounter.Views.FrontCounterFilter"
             BackgroundColor="Transparent">
    <ContentPage.Content>
        <Grid Padding="10" ColumnSpacing="10" VerticalOptions="CenterAndExpand" BackgroundColor="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Text="FILTER DATA" TextColor="Black" FontSize="18" FontAttributes="Bold"/>
            <Label Grid.Row="1" Text="Store"/>
            <Picker Grid.Row="2" Grid.ColumnSpan="2" Margin="15,0"/>
            <Label Grid.Row="3" Text="Date"/>
            <DatePicker Grid.Row="4" x:Name="datePicker" Grid.ColumnSpan="2" Margin="15,0"/>
            <Button Grid.Row="5" Grid.Column="0" Text="Cancel" Clicked="OnCancelClicked"/>
            <Button Grid.Row="5" Grid.Column="1" Text="OK" Clicked="OnOKClicked"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>