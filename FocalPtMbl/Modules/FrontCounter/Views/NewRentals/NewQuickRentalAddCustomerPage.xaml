                                                <RowDefinition Height="auto"/>
                                                <RowDefinition Height="auto"/>
                                                <RowDefinition Height="auto"/>
                                            </Grid.RowDefinitions>

                                            <Line Grid.Row="0"  Grid.Column="0" Grid.ColumnSpan="2" BackgroundColor="LightGray" Margin="0,5,0,5"/>

                                            <local:LabelDropDownCustomControl Grid.Row="1" Grid.Column="0"
                                                    VerticalOptions="Start" Padding="1"
                                                    LabelText="Order Open"
                                                    SelectedItem="{Binding CustomerOEMail , Mode=TwoWay}"
                                                    ItemsSource="{Binding NotificationTypeList}"/>

