                                </xct:Expander>
                            </Frame>
                        </Grid>

                        <!--Personal Information-->
                        <Grid Grid.Row="7">
                            <Frame BackgroundColor="{StaticResource BackgroundPageColor}" CornerRadius="5" HasShadow="True" Margin="0,5,0,5" Padding="10">
                                <xct:Expander x:Name="ExpanderPersonalInfo" >
                                    <xct:Expander.Header>
                                        <StackLayout Orientation="Horizontal">
                                            <Label
                                            Padding="5"
                                            LineBreakMode="NoWrap"
                                            Style="{DynamicResource NewCustomerExpanderHeaderLable}"
                                            Text="Personal Information"
                                                HorizontalOptions="StartAndExpand"/>

                                            <Frame BackgroundColor="#5a607f" Padding="1" 
                                                HorizontalOptions="End" VerticalOptions="Center" WidthRequest="25" HeightRequest="25" 
                                                CornerRadius="50" >
                                                <Image WidthRequest="10" Source="downwhite.png" Margin="5" >
                                                    <Image.Triggers>
                                                        <DataTrigger TargetType="Image" Binding="{Binding Path=IsExpanded, Source={x:Reference ExpanderPersonalInfo}}" Value="True">
                                                            <Setter Property="Source" Value="upwhite.png" />
                                                        </DataTrigger>
                                                    </Image.Triggers>
                                                </Image>
                                                <Frame.Triggers>
                                                    <DataTrigger TargetType="Frame" Binding="{Binding Path=IsExpanded, Source={x:Reference ExpanderPersonalInfo}}" Value="True">
                                                        <Setter Property="BackgroundColor" Value="#f99600" />
                                                    </DataTrigger>
                                                </Frame.Triggers>
                                            </Frame>
                                        </StackLayout>
                                    </xct:Expander.Header>
                                    <xct:Expander.Content>
                                        <Grid RowSpacing="10" Padding="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="11"/>
                                                <RowDefinition Height="auto"/>
                                                <RowDefinition Height="auto"/>
                                                <RowDefinition Height="auto"/>
                                            </Grid.RowDefinitions>

                                            <Line Grid.Row="0"  Grid.Column="0" Grid.ColumnSpan="2" BackgroundColor="LightGray" Margin="0,5,0,5"/>

                                            <local:LabelEditorCustomControl Grid.Row="1" Grid.Column="0"
                                                   EditorText="{Binding LicenceNumberDisplay}" 
                                                   MaxLenth="100" LabelText="License Number" 
                                                   PlaceHolder="Enter License Number" Keyboard="Text" />

                                            <StackLayout  Grid.Row="1" Grid.Column="1" Orientation="Vertical">
                                                <Label Text="{Binding LicenceExpirationLabel}" FontSize="Default" Style="{DynamicResource LabelDefault}">
                                                    <Label.Triggers>
                                                        <DataTrigger TargetType="Label" Binding="{Binding LicenceExpiration.IsValid, Mode=TwoWay}" Value="False">
                                                            <Setter Property="TextColor" Value="{StaticResource ErrorColor}" />
                                                            <Setter Property="FontAttributes" Value="Bold" />
                                                        </DataTrigger>
                                                    </Label.Triggers>
                                                </Label>
                                                <Frame BackgroundColor="#fff" CornerRadius="5" HasShadow="True" BorderColor="#e6e9f4" Padding="2">
                                                    <DatePicker Format="MM/yyyy"
                                                         VerticalOptions="Start" Date="{Binding LicenceExpirationDateTime, Mode=TwoWay}" />
                                                    <Frame.Triggers>
                                                        <DataTrigger TargetType="Frame" Binding="{Binding LicenceExpiration.IsValid}" Value="False">
                                                            <Setter Property="BorderColor" Value="{StaticResource ErrorColor}" />
                                                        </DataTrigger>
                                                    </Frame.Triggers>
                                                </Frame>
                                            </StackLayout>
                                            
                                            <local:LabelDropDownCustomControl Grid.Row="2" Grid.Column="0"
                                                    VerticalOptions="Start" Padding="1"
                                                    LabelText="{Binding LicenceStateLabel}"
                                                    IsFirstRowPlaceholder="True"
                                                    SelectedItem="{Binding LicenceStateDisplay, Mode=TwoWay}"
                                                    IsValid="{Binding LicenceState.IsValid, Mode=TwoWay}"
                                                    ItemsSource="{Binding StateList}"/>

                                            <StackLayout  Grid.Row="2" Grid.Column="1" Orientation="Vertical">
                                                <Label Text="DOB" FontSize="Default" Style="{DynamicResource LabelDefault}"/>
                                                <DatePicker
                                                         VerticalOptions="Start" Date="{Binding CustomerToAdd.CustomerBDte, Mode=TwoWay}" />
                                            </StackLayout>

                                            <local:LabelEditorCustomControl Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                                   EditorText="{Binding CustomerToAdd.CustomerSS}" 
                                                   MaxLenth="100" LabelText="Social Security" 
                                                   PlaceHolder="Enter Social Security Number" Keyboard="Text" />
                                        </Grid>
                                    </xct:Expander.Content>
                                </xct:Expander>
                                <Frame.Triggers>
                                    <DataTrigger TargetType="Frame" Binding="{Binding IsPersonalInfoValid, Mode=TwoWay}" Value="False">
                                        <Setter Property="BorderColor" Value="{StaticResource ErrorColor}" />
                                    </DataTrigger>
                                </Frame.Triggers>
                            </Frame>
                        </Grid>

