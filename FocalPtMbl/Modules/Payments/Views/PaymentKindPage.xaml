<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:viewModel="clr-namespace:FocalPoint.Modules.Payments.ViewModels" xmlns:styles="clr-namespace:FocalPtMbl.Themes" xmlns:views="clr-namespace:FocalPoint.Modules.Payments.Views" x:Class="FocalPoint.Modules.Payments.Views.PaymentKindPage" BackgroundColor="#fff">
    <ContentPage.BindingContext>
        <viewModel:PaymentPageViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <styles:LightTheme />
                <styles:DarkTheme />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="6*" />
                <RowDefinition Height="3.5*" />
            </Grid.RowDefinitions>
            <Frame BackgroundColor="#f5f6fa" Grid.Row="0" Grid.Column="0" Margin="10,10" Padding="10,10">
                <Grid BackgroundColor="#f5f6fa" ColumnSpacing="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*" />
                        <ColumnDefinition Width="6*" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Text="Amount Due: $364" HorizontalTextAlignment="End" TextColor="#131523" VerticalOptions="Center" />
                    <Label Grid.Row="0" Grid.Column="1" Text="Suggested Deposit: 250" HorizontalTextAlignment="Start" TextColor="#131523" VerticalOptions="Center" />
                </Grid>
            </Frame>
            <views:PaymentCreditCardPos Grid.Row="1" Grid.Column="0"  Margin="10,0" VerticalOptions="StartAndExpand"/>
            <Grid Grid.Row="2" Grid.Column="0" ColumnSpacing="20" VerticalOptions="End" BackgroundColor="#f5f6fa">
                <views:PaymentProcessView Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="3" VerticalOptions="FillAndExpand" />
                <Button Text="CANCEL" Grid.Row="3" Grid.Column="0" Style="{DynamicResource PrimaryButton}" BackgroundColor="#f0142f" TextColor="#fff" Margin="10,10" />
                <Button Text="PROCESS PAYMENT" Grid.Row="3" Grid.Column="1" Style="{DynamicResource PrimaryButton}" BackgroundColor="#57b8ff" TextColor="#fff" Margin="10,10" />
            </Grid>
        </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>