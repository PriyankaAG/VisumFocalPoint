<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:views="clr-namespace:FocalPoint.CustomControls"
             x:Class="FocalPoint.Modules.Payments.Views.PaymentDiscount">
  <ContentView.Content>
        <Frame x:Name="frameView" Padding="10,10" CornerRadius="5" BackgroundColor="#f5f6fa">
            <StackLayout Orientation="Vertical">
                <Label Text="{Binding OtherTitle}" TextColor="#131523" FontAttributes="Bold" />
                <Grid ColumnSpacing="20" Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <views:EditorCustomControl Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" EditorText="{Binding OtherNumber}" MaxLenth="100" LabelText="Number" PlaceHolder="Enter number" Keyboard="Text" />
                </Grid>
            </StackLayout>
        </Frame>
    </ContentView.Content>
</ContentView>