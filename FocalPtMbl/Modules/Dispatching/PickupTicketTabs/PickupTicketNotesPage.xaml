<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FocalPoint.Modules.Dispatching.PickupTicketTabs.PickupTicketNotesPage"
             BackgroundColor="{DynamicResource MainPageBackgroundColor}">
    <ContentPage.Content>
        <ScrollView BackgroundColor="{DynamicResource BackgroundThemeColor}" Margin="5,5">
            <StackLayout Margin="5,5" HorizontalOptions="FillAndExpand">
                <Label Text="Ticket Notes" Style="{StaticResource Key=LabelDashboardHeader}" XAlign="Start" YAlign="Center" />
                <Label Text="{Binding PuNote}" TextColor="Black" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Padding="10,0"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>